    <script>
        var element = document.querySelectorAll(".curso_title")
        var eleX = document.querySelectorAll(".curso_title")


        for (let index = 0; index < element.length; index++) {

            const elemento = element[index];

            elemento.addEventListener("click", () => {
                 var proximoIrmao = elemento.nextElementSibling;

                if(proximoIrmao.style.display == "none"){
                    proximoIrmao.style.display = "block"
                } else {
                    proximoIrmao.style.display = "none"
                }
            })
        }
           
    </script>
